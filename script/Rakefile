    def makeSamples(samplesDir)
      removeSamples(samplesDir)

      mkdir samplesDir

      repo_sas = File.join(samplesDir, 'rhodes-system-api-samples')
      cp_r(File.join($base_dir, 'rhodes-system-api-samples'), repo_sas)

      rmGlob(repo_sas, '.git')
      rmGlob(repo_sas, '.gitignore')
    end

